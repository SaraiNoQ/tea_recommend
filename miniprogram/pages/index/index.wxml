<!--index.wxml-->
<view class="container1">
  <van-toast id="van-toast" />
  <view class="project-info">
    <swiper
      class="swiper-container"
      indicator-dots="true"
      indicator-active-color="rgb(223,93,12)"
      autoplay="true"
      current="1"
      interval="5500"
    >
      <swiper-item>
        <image
          src="http://82.157.232.71/images/logo-p.png"
          class="swipper-image"
          mode="scaleToFill"
        ></image>
      </swiper-item>
      <swiper-item>
        <view class="swiper-item">尊敬的朋友，您好！通过这份中医体质与茶疗自测问卷，您将免费获得自身中医体质状态的评估结果以及与您体质适配的茶品推荐，祝愿茶成为您生命中不可或缺的部分。
    老迈思想茶携手与您走进茶与人生！祝君安康！</view>
      </swiper-item>
    </swiper>
  </view>

  <view class="message">
    <van-notice-bar
      left-icon="volume-o"
      text="{{message}}"
    />
  </view>

  <view class="operation">
    <buttonitem
      color="体质测试及健康饮茶建议"
      imgurl="http://82.157.232.71/images/table-p.png"
      other="http://82.157.232.71/images/recom-l.png"
      info="体质测试及饮茶建议"
      op="op"
      rheight="38"
      rwidth="38"
      lheight="42"
      lwidth="42"
      bindtap="navigateToUser"
      class="a"
    />
    <buttonitem
      class="special"
      color="所有填表记录"
      imgurl="http://82.157.232.71/images/table-p.png"
      other="http://82.157.232.71/images/history-s.png"
      info="历史记录"
      op="op1"
      rheight="36"
      rwidth="35"
      lheight="42"
      lwidth="42"
      bindtap="navigateToHistory"
      class="b"
    />
    <buttonitem
      color="体质介绍和茶叶信息"
      other="http://82.157.232.71/images/recom-r.png"
      imgurl="http://82.157.232.71/images/tea-p.png"
      info="相关介绍"
      op="op3"
      style="padding-left: 20rpx;"
      lheight="42"
      lwidth="42"
      bindtap="navigateToCheck"
      class="c"
    />
    <buttonitem
      color="使用遇到的问题"
      imgurl="http://82.157.232.71/images/feedback-l.png"
      other="http://82.157.232.71/images/feedback-s.png"
      info="问题反馈"
      op="op3"
      style="padding-left: 14rpx;"
      rheight="38"
      rwidth="38"
      lheight="42"
      lwidth="42"
      bindtap="navigateToFeedback"
      class="d"
    />
  </view>

